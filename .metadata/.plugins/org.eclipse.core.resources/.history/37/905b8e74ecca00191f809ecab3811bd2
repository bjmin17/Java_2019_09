package com.biz.classes.arrays;

import java.util.Random;
import java.util.Scanner;

public class Array_03 {

	public static void main(String[] args) {

		Scanner scanner = new Scanner(System.in);
		System.out.print("1부터 10까지의 숫자 중에 값을 입력하세요 >> ");
		String strNum = scanner.nextLine();
		
		Random rnd = new Random();
		int[] intNum = new int[10];
		
		for(int i = 0 ; i < intNum.length ; i++) {
			intNum[i] = rnd.nextInt(10)+1;
		}
		
		int intNum2 = Integer.valueOf(strNum);
		int index;
		for(index = 1; index < intNum.length ; index++) {
			if(intNum[index] == intNum2) break;
		}
		if(index >= intNum.length)
			System.out.printf("배열에 %d값이 없다\n" ,intNum2);
		else 
			System.out.printf("찾았다.\t 배열의 %d번째에 값이 있다\n", index);
		for(int i = 0 ; i < intNum.length ; i++) {
			System.out.println(i);
		}
	}

}
