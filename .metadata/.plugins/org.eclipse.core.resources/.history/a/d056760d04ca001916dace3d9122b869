package com.biz.classes.student;

public class Student {

	public String strStudentId;
	public String strName;
	public int admissionYear;
	public String strMajor;
	public int intGrade;
	
	
	
	public void StudentInformation() {
		intGrade = 2019 - admissionYear;
		System.out.println("===============================================");
		System.out.println("학번\t이름\t입학년도\t전공\t학년\n");
		System.out.println("-----------------------------------------------");
		System.out.printf("%s\t%s\t%d\t%s\t%d\n",
				strStudentId,
				strName,
				admissionYear,
				strMajor,
				intGrade);
		System.out.println("===============================================");
		}
	
	
	
	public void StudentList() {
		intGrade = 2019 - admissionYear;
		System.out.println("===============================================");
		System.out.println("학번\t이름\t입학년도\t전공\t학년\n");
		System.out.println("-----------------------------------------------");
		System.out.printf("%s\t%s\t%d\t%s\t%d\n",
				strStudentId,
				strName,
				admissionYear,
				strMajor,
				intGrade);
		System.out.println("===============================================");
	}

}
