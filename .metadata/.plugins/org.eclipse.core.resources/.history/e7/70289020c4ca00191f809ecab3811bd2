package com.biz.classes;

public class ClassEx_03 {

	/*
	 * StudentVO 클래스를 사용하여
	 * 학생 10명의 신상정보를 메모리에 저장하고
	 * 	== 가. StudentVO를 객체로 10개 선언
	 * 학생 정보와 학생 리스트를 확인하고 싶다.
	 * 	첫번째 방법. 학생클래스를 객체로 선언하는 명령문을 10개 복제
	 * 	두번째 방법. 배열을 이용하는 방법
	 */
	public static void main(String[] args) {
		
		//*************************
		// 배열의 선언만 한 것
		//-------------------------
		// StudnetVO[] : 지금부터 배열을 선언하겠다.
		// new StudentVO[10] {은 생성자가 아님(소괄호가 아님)}
		// 	: StudentVO 클래스를 10개 복제하여 사용할 수 있도록
		//	  메모리를 준비하라
		// new StudentVO() 생성자 메서드와는 다른 명령형식
		StudentVO[] stVO = new StudentVO[10];
		
		// 선언된 객체를 사용할 수 있도록 초기화작업을 수행해야
		/*
		 * 선언된 배열의 요소에 접근(읽기, 쓰기)을 하려면
		 * 요소의 index를 기준으로 참조해야 한다.
		 * 
		 * stVO[0] : stVO 배열의 0번 위치에 있는 요소에,, 0을 첨자, index, 정확히는 배열첨자(Array index)라고 한다.
		 * 		접근하겠다라는 시작
		 */
		//stVO[0]
		
		
		// 문자열을 저장할 메모리 10개를 준비하라
		String[] str = new String[10];
		
		// 정수값을 저장할 메모리 10개를 준비하라
		int[] intnum = new int[10];
		
		// 실수값을 저장할 메모리 10개를 준비하라
		float[] floatNum = new float[10];
		
		
			
		
	}

}
