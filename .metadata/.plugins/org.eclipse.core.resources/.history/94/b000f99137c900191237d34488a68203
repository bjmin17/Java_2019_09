package com.biz.classes;

import java.util.Scanner;

public class String_08 {

	/*
	 * strNation 에 저장된 문자열을 보여주고
	 * 한 개의 문자를 키보드로 입력받고
	 * 입력한 문자가 몇 번째 위치에 있는지를 찾아보기
	 */
	public static void main(String[] args) {
		
		// 키보드에서 입력한 문자열을 가져오기 위한 도구
		Scanner scanner = new Scanner(System.in);
		String strNation = "Republic of Korea";
		int intLength = strNation.length();
		System.out.println("문자를 입력 > ");
		String strEn = scanner.nextLine();
		
		
		
		
		for(int i = 0 ; i < intLength; i++) {
			//String strSt = strNation.substring(strEn, strEn+1);
			//if(strSt.equalsIgnoreCase(strEn)) {
				System.out.println(strEn + "문자가 " + (i+1) + "번째에 위치해 있다.");
			}
					
			
		}
				
		
	}

