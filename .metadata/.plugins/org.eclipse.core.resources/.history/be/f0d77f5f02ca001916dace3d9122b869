package com.biz.classes.student;

public class Student {

	public String strStudentId;
	public String strName;
	public int AdmissionYear;
	public String Major;
	public int Grade;
	
	Grade = 2019 - AdmissionYaer;
	
	public void addList() {

		System.out.println("===============================================");
		System.out.println("학번\t이름\t입학년도\t전공\t학년\n");
		System.out.println("-----------------------------------------------");
		System.out.printf("%s\t%s\t%d\t%s\t%d\n",
				strStudentId,
				strName,
				AdmissionYear,
				Major,
				Grade);
		System.out.println("===============================================");
	}

}
