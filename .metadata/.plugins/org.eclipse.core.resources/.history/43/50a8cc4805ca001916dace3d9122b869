package com.biz.classes.student;

public class Student {

	public String strStudentId;
	public String strName;
	public int admissionYear;
	public String strMajor;
	public int intGrade;
	
	
	
	public void StudentInformation() {
		
		System.out.println("학생 개인의 정보 보기");
		System.out.println("===============================================");
		System.out.println("학번 : " + strStudentId);
		System.out.println("이름 : " + strName);
		System.out.println("입학년도 : " + admissionYear);
		System.out.println("전공 : " + strMajor);
		System.out.println("학년 : " + intGrade);
		System.out.println("===============================================");
		}
	
	
	
	public void StudentList() {
		
		System.out.println("학생 리스트 보기");
		System.out.printf("%s\t%s\t%d\t%s\t%d\n",
				strStudentId,
				strName,
				admissionYear,
				strMajor,
				intGrade);
		
	}

}
